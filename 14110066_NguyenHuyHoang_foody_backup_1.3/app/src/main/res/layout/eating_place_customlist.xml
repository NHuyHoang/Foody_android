<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:background="@color/systemWhite">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/point"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:background="@drawable/greenround"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp">
                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center|left"
                            android:paddingLeft="10dp"
                            android:textSize="14dp"
                            android:textColor="@color/lightlyGray"
                            android:textStyle="bold"
                            android:text="Tên quán"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/locale"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center|left"
                            android:paddingLeft="10dp"
                            android:textSize="10dp"
                            android:text="Vị Trí"/>
                    </LinearLayout>
                    
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="230dp">
            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/systemWhite"
                android:scaleType="centerCrop"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/avatar1"
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:layout_gravity="center"
                    android:background="@mipmap/ic_launcher"
                    android:src="@drawable/avaslot"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="25dp">
                        <TextView
                            android:id="@+id/username1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center|left"
                            android:text="name"/>
                        <TextView
                            android:id="@+id/rating1"
                            android:layout_width="25dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:gravity="center"
                            android:textColor="@color/systemGreen"
                            android:text="0.0"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp">
                        <TextView
                            android:id="@+id/comment1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="10dp"
                            android:text="Comment"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/avatar2"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_gravity="center"
                android:background="@mipmap/ic_launcher"
                android:src="@drawable/avaslot"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="25dp">
                    <TextView
                        android:id="@+id/username2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:text="name"/>
                    <TextView
                        android:id="@+id/rating2"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:textColor="@color/systemGreen"
                        android:text="0.0"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp">
                    <TextView
                        android:id="@+id/comment2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="10dp"
                        android:text="Comment"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="50dp"
                android:background="@drawable/bubble_chat"
                android:layout_width="30px"
                android:layout_height="30px"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/totalrev"
                android:layout_marginLeft="2dp"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:text="111"
                android:textSize="10dp"
                android:gravity="center"/>
            <ImageView
                android:layout_marginLeft="10dp"
                android:background="@drawable/camera"
                android:layout_width="40px"
                android:layout_height="40px"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/totalimg"
                android:layout_marginLeft="2dp"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:text="111"
                android:textSize="10dp"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>